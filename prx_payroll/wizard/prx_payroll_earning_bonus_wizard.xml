<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_prx_payroll_earning_bonus_wizard" model="ir.ui.view">
            <field name="name">prx.payroll.earning.bonus.wizard.form</field>
            <field name="model">prx.payroll.earning.bonus.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Bonus">
                    <group>
                        <group>
                            <field name="bonus_salary" readonly="1"/>
                            <field name="start_period"/>
                            <field name="end_period"/>
                            <field name="accrual_date"/>
                            <field name="calc_type" widget="radio"/>
                            <field name="bonus_value"/>
                            <field name="bonus_category"/>
                            <field name="earning_id"/>
                        </group>
                        <group>
                            <field name="employee_ids" widget="many2many_tags" />
                        </group>

                    </group>
                    <footer>
                        <button string="ბონუსის გენერირება" type="object" name="generate_bonus" class="btn-primary"/>
                        <button string="დახურვა" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_prx_payroll_earning_bonus_wizard" model="ir.actions.act_window">
            <field name="name">Generate Bonus</field>
            <field name="res_model">prx.payroll.earning.bonus.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>