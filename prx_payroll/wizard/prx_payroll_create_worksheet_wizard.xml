<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_prx_payroll_create_worksheet_wizard" model="ir.actions.act_window">
        <field name="name">ტაბელის შექმნა</field>
        <field name="res_model">prx.payroll.create.worksheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_prx_payroll_create_worksheet_wizard_form" model="ir.ui.view">
        <field name="name">prx.payroll.create.worksheet.wizard.form</field>
        <field name="model">prx.payroll.create.worksheet.wizard</field>
        <field name="arch" type="xml">
            <form string="ტაბელის შექმნა">
                <group>
                    <field name="date"/>
                    <field name="earning_id" domain="[('salary_type','=','standard')]"/>
                    <field name="department_id"/>
                </group>

                <notebook>
                    <page string="შესაქმნელი">
                        <field name="line_ids_not_created" nolabel="1" domain="[('moved','=',False)]">
                            <list editable="bottom" create="False">
                                <field name="selected"/>
                                <field name="employee_id" readonly="1" force_save="1" optional="show"/>
                                <field name="department_id" readonly="1" force_save="1" optional="show"/>
                                <field name="worksheet" readonly="1" force_save="1" optional="show"/>
                                <field name="period_id" readonly="1" force_save="1" optional="show"/>
                                <field name="employee_earning_id" readonly="1" force_save="1" optional="show"/>
                                <field name="earning_unit" readonly="1" force_save="1" optional="show"/>
                                <field name="quantity"/>
                            </list>
                        </field>
                    </page>
                    <page string="შექმნილი">
                        <field name="line_ids_created" readonly="1" nolabel="1" domain="[('moved','=',True)]">
                            <list>
                                <field name="employee_id" optional="show"/>
                                <field name="department_id" optional="show"/>
                                <field name="worksheet" optional="show"/>
                                <field name="period_id" optional="show"/>
                                <field name="quantity" optional="show"/>
                                <field name="employee_earning_id" optional="show"/>
                                <field name="earning_unit" optional="show"/>
                            </list>
                        </field>
                    </page>
                </notebook>


                    <group col="2" colspan="2" class="oe_right" style="float:right; width:100%;">
                        <div style="display:flex; justify-content:space-between; margin-top:10px;">

                            <div style="flex:1;">
                                <div style="font-weight:bold;">შესაქმნელი:</div>
                                <div style="margin-left:20px;">
                                    <span style="margin-left:20px;">რაოდენობა:
                                        <field name="count_not_created" nolabel="1" class="oe_inline" readonly="1"/>
                                    </span>
                                </div>
                            </div>


                            <div style="flex:1; margin-right:30px;">
                                <div style="font-weight:bold;">შექმნილი:</div>
                                <div style="margin-left:20px;">
                                    <span style="margin-left:20px;">რაოდენობა:
                                        <field name="count_created" nolabel="1" class="oe_inline" readonly="1"/>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </group>

                <footer>
                    <button name="action_confirm" string="დადასტურება" type="object" class="btn-primary"/>
                    <button string="გაუქმება" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
