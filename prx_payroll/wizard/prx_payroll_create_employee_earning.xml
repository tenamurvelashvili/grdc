<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_prx_payroll_position_earning_wizard_form" model="ir.ui.view">
            <field name="name">prx.payroll.position.earning.wizard.form</field>
            <field name="model">prx.payroll.position.earning.wizard</field>
            <field name="arch" type="xml">
                <form string="პოზიციის ანაზღაურების დამატება">
                    <group>
                        <field name="period_id" force_save="1"/>
                        <field name="earning_id" force_save="1"/>
                        <field name="department_id" force_save="1"/>
                    </group>

                    <notebook>
                        <page string="შესაქმნელი ანაზღაურებები">
                            <field name="line_ids_not_created">
                                <list editable="bottom" create="false">
                                    <field name="selected" optional="show" width="80" force_save="1"/>
                                    <field name="employee_id" optional="show" width="80" readonly="1" force_save="1"/>
                                    <field name="earning_id" optional="show" width="80" force_save="1"/>
                                    <field name="contract_id" optional="show" width="80" readonly="1" force_save="1"/>
                                    <field name="identification_number" optional="show" width="80" readonly="1" force_save="1"/>
                                    <field name="position_id" optional="show" width="80" readonly="1" force_save="1"/>
                                    <field name="start_date" optional="show" width="80" readonly="1" force_save="1"/>
                                    <field name="end_date" optional="show" width="80" readonly="1" force_save="1"/>
                                    <field name="amount" optional="show" width="80" force_save="1"/>
                                    <field name="currency_id" optional="show" width="80" force_save="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="შექმნილი ანაზღაურებები">
                            <field name="line_ids_created" readonly="1">
                                <list>
                                    <field name="employee_id" optional="show" width="80"/>
                                    <field name="earning_id" optional="show" width="80"/>
                                    <field name="contract_id" optional="show" width="80"/>
                                    <field name="identification_number" optional="show" width="80"/>
                                    <field name="position_id" optional="show" width="80"/>
                                    <field name="start_date" optional="show" width="80"/>
                                    <field name="end_date" optional="show" width="80"/>
                                    <field name="amount" optional="show" width="80"/>
                                    <field name="currency_id" optional="show" width="80"/>
                                </list>
                            </field>
                        </page>

                    </notebook>

                    <group col="2" colspan="2" class="oe_right" style="float:right; width:100%;">
                        <div style="display:flex; justify-content:space-between; margin-top:10px;">

                            <div style="flex:1;">
                                <div style="font-weight:bold;">შესაქმნელი:</div>
                                <div style="margin-left:20px;">
                                    <span>თანხა:
                                        <field name="amount_total_not_created" nolabel="1" class="oe_inline"
                                               readonly="1"/>
                                    </span>
                                    <span style="margin-left:20px;">რაოდენობა:
                                        <field name="count_not_created" nolabel="1" class="oe_inline" readonly="1"/>
                                    </span>
                                </div>
                            </div>


                            <div style="flex:1; margin-right:30px;">
                                <div style="font-weight:bold;">შექმნილი:</div>
                                <div style="margin-left:20px;">
                                    <span>თანხა:
                                        <field name="amount_total_created" nolabel="1" class="oe_inline" readonly="1"/>
                                    </span>
                                    <span style="margin-left:20px;">რაოდენობა:
                                        <field name="count_created" nolabel="1" class="oe_inline" readonly="1"/>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </group>


                    <footer>
                        <button name="action_confirm" string="დადასტურება" type="object" class="btn-primary"/>
                        <button string="გაუქმება" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_prx_payroll_position_earning_wizard" model="ir.actions.act_window">
            <field name="name">პოზიციის ანაზღაურების შექმნა</field>
            <field name="res_model">prx.payroll.position.earning.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>