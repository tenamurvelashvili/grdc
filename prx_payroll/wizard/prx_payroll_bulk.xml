<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_prx_bulk_update_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Update</field>
        <field name="res_model">prx.payroll.bulk.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_prx_bulk_update_wizard_form" model="ir.ui.view">
        <field name="name">prx.bulk.wizard.form</field>
        <field name="model">prx.payroll.bulk.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Update">
                <group>
                    <field name="end_date"/>
                    <field name="currency_id"
                           invisible="context.get('active_model') != 'prx.payroll.position.earning'"/>
                </group>
                <footer>
                    <button name="action_apply" type="object" string="Apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
