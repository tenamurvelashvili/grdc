<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_prx_payroll_close_transaction_wizard" model="ir.ui.view">
            <field name="name">prx.payroll.close.transaction.wizard.form</field>
            <field name="model">prx.payroll.close.transaction</field>
            <field name="arch" type="xml">
                <form string="ფეიროლის გატარების გადარიცხვა" create="false" edit="false">
                    <group>
                        <field name="period" required="1"/>
                        <field name="process_type" options="{'horizontal': true}" required="1"/>
                        <field name="worksheet_id" domain="[('period_id','=',period),('salary_type','=',process_type)]"/>
                    </group>
                    <footer>
                        <button string="გატარებეის დახურვა"
                                type="object"
                                name="action_close_transactions"
                                confirm="ნამდვილად გსურს ამ პერიოდში გატარებების გადარიცხვა?"
                                class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_prx_payroll_close_transaction_wizard" model="ir.actions.act_window">
            <field name="name">გატარებების გადარიცხვა</field>
            <field name="res_model">prx.payroll.close.transaction</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_prx_payroll_close_transaction_wizard"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>