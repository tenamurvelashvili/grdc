<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_prx_payroll_amount_calculator_wizard" model="ir.ui.view">
            <field name="name">prx.payroll.amount.calculator.wizard.form</field>
            <field name="model">prx.payroll.amount.calculator.wizard</field>
            <field name="arch" type="xml">
                <form string="თანხის დაანგარიშება">
                    <group>
                        <group>
                            <field name="net_amount"/>
                            <field name="pension_percent"/>
                        </group>
                        <group>
                            <field name="income_tax_percent"/>
                            <field name="gross_amount" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="შენახვა" name="save_amount" type="object" class="btn-primary" confirm="ნამდვილად გსურს თანხის განახლება?"/>
                        <button string="დახურვა" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>