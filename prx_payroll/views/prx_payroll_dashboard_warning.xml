<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prx_payroll_dashboard_warning_view_form" model="ir.ui.view">
        <field name="name">prx.payroll.dashboard.warning.form</field>
        <field name="model">prx.payroll.dashboard.warning</field>
        <field name="arch" type="xml">
            <form string="Payroll Dashboard Warning">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. Employee Without Contracts"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="country_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group colspan="4">
                            <field name="evaluation_code" widget="ace" options="{'mode': 'python'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="prx_payroll_dashboard_warning_view_tree" model="ir.ui.view">
        <field name="name">prx.payroll.dashboard.warning.list</field>
        <field name="model">prx.payroll.dashboard.warning</field>
        <field name="arch" type="xml">
            <list string="Payroll Dashboard Warning">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="country_id"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="prx_payroll_dashboard_warning_view_search" model="ir.ui.view">
        <field name="name">prx.payroll.dashboard.warning.search</field>
        <field name="model">prx.payroll.dashboard.warning</field>
        <field name="arch" type="xml">
            <search string="Search Payroll Dashboard Warning">
                <field name="name"/>
                <filter name="archived" string="დაარქივებული" domain="[('active', '=', False)]"/>
           </search>
        </field>
    </record>
</odoo>
