<?xml version="1.0" encoding="utf-8"?>

<odoo>

  <record id="view_prx_sequence_generation_list" model="ir.ui.view">
    <field name="name">prx.sequence.generation.list</field>
    <field name="model">prx.sequence.generation</field>
    <field name="arch" type="xml">
      <list string="Sequence Generation">
        <field name="name"/>
        <field name="model_model" />
        <field name="prefix"/>
        <field name="len_prefix"/>
        <field name="visualize_sequence"/>
      </list>
    </field>
  </record>

  <record id="view_prx_sequence_generation_form" model="ir.ui.view">
    <field name="name">prx.sequence.generation.form</field>
    <field name="model">prx.sequence.generation</field>
    <field name="arch" type="xml">
      <form string="Sequence Generation">
        <sheet>
          <group>
            <field name="name"/>
            <field name="model_model" readonly="generated==True" required="1"/>
            <field name="prefix" readonly="generated==True"/>
            <field name="len_prefix" readonly="generated==True"/>
            <field name="visualize_sequence" readonly="1"/>
            <field name="generated" invisible="1"/>
            <field name="sequence_id" readonly="1"/>
          </group>

            <button name="create_procurement_group_sequence"
                    type="object"
                    string="Generate Sequence"
                    class="btn-primary" invisible="generated==True"/>
        </sheet>
      </form>
    </field>
  </record>

</odoo>
