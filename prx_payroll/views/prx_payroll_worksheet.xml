<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_prx_payroll_worksheet_search" model="ir.ui.view">
            <field name="name">prx.payroll.worksheet.search</field>
            <field name="model">prx.payroll.worksheet</field>
            <field name="arch" type="xml">
                <search string="Payroll Worksheet">
                    <field name="sequence" string="დოკუმენტის ნომერი"/>
                    <field name="worker_id" string="თანამშრომელი"/>
                    <field name="worker_id" filter_domain="[('worker_id.identification_id','ilike',self)]"
                           string="პირადი ნომერი"/>
                    <field name="period_id" string="პერიოდი"/>
                    <field name="status" string="სტატუსი"/>
                    <filter string="ღია" name="open_status" domain="[('status','=','open')]"/>

                    <group string="დაჯგუფება">
                        <filter string="თანამშრომელი" name="group_worker" context="{'group_by':'worker_id'}"/>
                        <filter string="პერიოდი" name="group_period" context="{'group_by':'period_id'}"/>
                        <filter string="სტატუსი" name="group_status" context="{'group_by':'status'}"/>
                    </group>

                </search>
            </field>
        </record>


        <record id="view_prx_payroll_worksheet_form" model="ir.ui.view">
            <field name="name">prx.payroll.worksheet.form</field>
            <field name="model">prx.payroll.worksheet</field>
            <field name="arch" type="xml">
                <form string="Payroll Worksheet">
                    <header>
                        <field name="readonly_worksheet" invisible="1"/>
                        <field name="status" widget="statusbar" options="{'clickable': '1'}" readonly="1"/>

                        <button name="document_close" type="object" string="დახურვა" class="btn btn-primary"
                                invisible="status != 'open'"/>
                        <button name="document_post" type="object" string="დაპოსტვა" class="btn btn-primary"
                                invisible="status != 'closed'" groups="prx_payroll.prx_payroll_administrator"/>
                        <button name="document_cancel" type="object" string="გაუქმება" class="btn btn-primary"
                                invisible="status != 'posted'" groups="prx_payroll.prx_payroll_administrator"/>
                        <button name="document_open" type="object" string="დაბრუნება ღიაზე" class="btn btn-primary"
                                invisible="status != 'closed'"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="sequence" readonly="readonly_worksheet"/>
                                <field name="worker_id" readonly="readonly_worksheet"/>
                                <field name="period_id" readonly="readonly_worksheet"/>
                            </group>
                            <group>
                                <field name="status" readonly="1"/>
                                <field name="type" readonly="1"/>
                                <field name="salary_type" widget="radio"  options="{'horizontal': true}" readonly="readonly_worksheet"/>
                                <field name="transferred" readonly="readonly_worksheet"/>
                            </group>
                        </group>
                        <field name="note" placeholder="Add notes here..." readonly="readonly_worksheet"/>

                        <notebook>
                            <page string="ანაზღაურება">
                                <button name="action_view_worksheet_earning" type="object" string="ანაზღაურება"
                                        class="btn btn-primary" icon="fa-list" groups="prx_payroll.prx_payroll_administrator"/>
                                <field name="worksheet_detail_ids" readonly="1">
                                    <list editable="bottom">
                                        <field name="payroll_admin" column_invisible="1"/>
                                        <field name="position" optional="show" width="80"/>
                                        <field name="earning_id" optional="show" width="80"/>
                                        <field name="earning_amount" optional="show" width="80" invisible="not payroll_admin"/>
                                        <field name="rate" optional="show" width="80" invisible="not payroll_admin"/>
                                        <field name="amount" optional="show" width="80" invisible="not payroll_admin"/>
                                        <field name="proportion" optional="show" width="80"/>
                                        <field name="quantity" optional="show" width="80"/>
                                        <field name="date" optional="show" width="80"/>
                                    </list>
                                </field>
                            </page>

                            <page string="დეტალები">
                                <div class="d-flex" style="gap:10px; align-items: center;">
                                    <button string="დეტალების გენერაცია" name="generate_worksheet" type="object"
                                            class="btn btn-primary" groups="prx_payroll.prx_payroll_administrator" invisible="status != 'open'"/>
                                    <button string="სტრიქონების წაშლა" name="delete_lines" type="object"
                                            confirm="ნამდვილად გსურს სტრიქონების წაშლა?" class="btn btn-primary"
                                            invisible="status != 'open'" groups="prx_payroll.prx_payroll_administrator"/>
                                    <button name="action_view_worksheet_lines" type="object" string="დეტალები"
                                            class="btn btn-primary" icon="fa-list" groups="prx_payroll.prx_payroll_administrator"/>
                                </div>

                                <field name="worksheet_line_ids" readonly="status != 'open'">
                                    <list string="Worksheet Lines">
                                        <field name="payroll_admin" column_invisible="1" />
                                        <field name="earning_domain_ids" column_invisible="True"/>
                                        <field name="date" optional="show" width="80"/>
                                        <field name="earning_id" domain="[('id','in',earning_domain_ids)]"
                                               optional="show" width="80"/>
                                        <field name="quantity" optional="show" width="80"/>
                                        <field name="amount" readonly="1" optional="show" width="80" invisible="not payroll_admin"/>
                                        <field name="earning_unit" optional="show" width="80"/>
                                        <field name="earning_amount" optional="show" width="80" invisible="not payroll_admin"/>
                                        <field name="rate" optional="show" width="80" invisible="not payroll_admin"/>
                                        <field name="time_of_type" optional="show" width="80"/>
                                        <field name="kind_of_time_type" optional="show" width="80"/>
                                        <field name="over_time_earning_rate" optional="show" width="80"/>
                                        <field name="over_time_qty" optional="show" width="80"/>
                                        <field name="over_time_amount" optional="show" width="80"/>
                                        <field name="absence_trans_id" optional="show" width="80"/>
                                        <field name="source" optional="show" width="80"/>
                                    </list>
                                    <form string="Line Detail">
                                        <sheet>
                                            <field name="payroll_admin" invisible="True"/>
                                            <group>
                                                <group>
                                                    <field name="earning_domain_ids" invisible="True"/>
                                                    <field name="date"/>
                                                    <field name="earning_id" domain="[('id','in',earning_domain_ids)]"/>
                                                    <field name="quantity"/>
                                                    <field name="amount" readonly="1" invisible="not payroll_admin"/>
                                                    <field name="earning_amount" invisible="not payroll_admin"/>
                                                    <field name="rate" readonly="True" invisible="not payroll_admin"/>
                                                </group>
                                                <group>
                                                    <field name="over_time_earning_rate" invisible="not payroll_admin"/>
                                                    <field name="over_time_qty" invisible="not payroll_admin"/>
                                                    <field name="over_time_amount" invisible="not payroll_admin"/>
                                                    <field name="absence_trans_id" invisible="not payroll_admin"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="განაწილების სქემა" groups="prx_payroll.prx_payroll_administrator">
                                <field name="cost_line_ids">
                                    <list editable="bottom">
                                        <field name="cost_unit_id"/>
                                        <field name="cost_center_id"/>
                                        <field name="rate"/>
                                        <field name="cost_document_line_id" optional="hide"/>
                                        <field name="document_id" optional="hide"/>
                                        <field name="is_init_record" optional="hide"/>
                                        <field name="create_uid" optional="hide"/>
                                        <field name="create_date" optional="hide"/>
                                        <field name="write_uid" optional="hide"/>
                                        <field name="write_date" optional="hide"/>
                                    </list>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="prx_payroll_worksheet_list_view" model="ir.ui.view">
            <field name="name">prx.payroll.worksheet.list</field>
            <field name="model">prx.payroll.worksheet</field>
            <field name="arch" type="xml">
                <list string="Payroll Worksheet">
                    <header>
                        <button name="%(action_prx_payroll_create_worksheet_wizard)d"
                                string="ტაბელის შექმნა"
                                type="action"
                                display="always"
                                class="btn-primary"/>
                        <button name="document_post" string="დაპოსტვა" type="object" class="btn btn-primary" groups="prx_payroll.prx_payroll_administrator"/>
                        <button name="document_close" string="დახურვა" type="object" class="btn btn-primary"/>
                        <button name="document_open" string="დაბრუნება ღიაზე" type="object" class="btn btn-primary"/>
                        <button name="document_cancel" string="გაუქმება" type="object" class="btn btn-primary" groups="prx_payroll.prx_payroll_administrator"/>
                    </header>
                    <field name="sequence"/>
                    <field name="worker_id"/>
                    <field name="period_id"/>
                    <field name="status"/>
                    <field name="type"/>
                    <field name="salary_type"/>
                </list>
            </field>
        </record>


    </data>
</odoo>