<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_prx_rs_employee_wizard_form" model="ir.ui.view">
            <field name="name">prx.rs.employee.wizard.form</field>
            <field name="model">prx.rs.employee.wizard</field>
            <field name="arch" type="xml">
                <form string="RS Employee Import">
                    <sheet>
                        <group>
                            <field name="import_type"/>
                            <field name="tin" invisible="import_type != 'tin'" required="import_type == 'tin'"/>
                        </group>
                        <footer>
                            <button string="იმპორტი"
                                    type="object"
                                    name="action_run_import_rs_employees"
                                    class="btn btn-primary"/>
                            <button string="Cancel"
                                    class="btn btn-secondary"
                                    special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>